{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "com.mogita.osmflux",
  "version": "$CI_RELEASE_VERSION",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/gui/build/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "exportAuthInfo": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": false
  },
  "nativeAllowList": ["filesystem.*", "app.*", "os.*", "computer.*", "storage.*", "window.*", "debug.log"],
  "globalVariables": {
    "RELEASE_INFO": {
      "channel": "$CI_RELEASE_CHANNEL"
    }
  },
  "modes": {
    "window": {
      "title": "OsmFlux",
      "width": 800,
      "height": 520,
      "minWidth": 800,
      "minHeight": 520,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/gui/public/osmflux-dev.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    }
  },
  "cli": {
    "binaryName": "osmflux",
    "resourcesPath": "/gui/build/",
    "extensionsPath": "/extensions/",
    "binaryVersion": "4.13.0",
    "clientVersion": "3.11.0",
    "frontendLibrary": {
      "patchFile": "/gui/index.html",
      "devUrl": "http://localhost:3000"
    }
  }
}
